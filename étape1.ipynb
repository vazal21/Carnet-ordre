   "source": [
    "class Ordre:\n",
    "    def __init__(self, type_ordre, quantite, prix=None):\n",
    "        self.type_ordre = type_ordre\n",
    "        self.quantite = quantite\n",
    "        self.prix = prix\n",
    "\n",
    "    def afficher_ordre(self):\n",
    "        print(\"Type d'ordre:\", self.type_ordre)\n",
    "        print(\"Quantité:\", self.quantite)\n",
    "        if self.prix is not None:\n",
    "            print(\"Prix: \", self.prix)\n",
    "        else:\n",
    "            print(\"Prix: Au prix de marché\")\n",
    "\n",
    "class CarnetOrdres:\n",
    "    def __init__(self):\n",
    "        self.achats = []\n",
    "        self.ventes = []\n",
    "\n",
    "    def ajouter_ordre(self, ordre):\n",
    "        if ordre.type_ordre.lower() == \"achat\":\n",
    "            self.achats.append(ordre)\n",
    "            self.achats.sort(key=lambda x: x.prix if x.prix else float('inf'))  # Tri par prix croissant\n",
    "        elif ordre.type_ordre.lower() == \"vente\":\n",
    "            self.ventes.append(ordre)\n",
    "            self.ventes.sort(key=lambda x: -x.prix if x.prix else float('-inf'))  # Tri par prix décroissant\n",
    "\n",
    "    def execute_ordre_marche(self, ordre):\n",
    "        if ordre.type_ordre.lower() == \"achat\":\n",
    "            if self.ventes:\n",
    "                prix_execution = self.ventes[0].prix\n",
    "                quantite_execution = min(ordre.quantite, sum(v.quantite for v in self.ventes if v.prix == prix_execution))\n",
    "                print(f\"Ordre d'achat au prix de marché exécuté à {prix_execution} pour {quantite_execution} titres.\")\n",
    "                return quantite_execution\n",
    "            else:\n",
    "                print(\"Aucun ordre de vente disponible pour exécuter l'ordre d'achat au prix de marché.\")\n",
    "                return 0\n",
    "        elif ordre.type_ordre.lower() == \"vente\":\n",
    "            if self.achats:\n",
    "                prix_execution = self.achats[0].prix\n",
    "                quantite_execution = min(ordre.quantite, sum(a.quantite for a in self.achats if a.prix == prix_execution))\n",
    "                print(f\"Ordre de vente au prix de marché exécuté à {prix_execution} pour {quantite_execution} titres.\")\n",
    "                return quantite_execution\n",
    "            else:\n",
    "                print(\"Aucun ordre d'achat disponible pour exécuter l'ordre de vente au prix de marché.\")\n",
    "                return 0\n",
    "\n",
    "    def afficher_carnet(self):\n",
    "        print(\"\\nCarnet d'ordres :\")\n",
    "        print(\"---------------------------------------------------------------------\")\n",
    "        print(\"|  Achat  |  Quantité  |  Prix  |  Vente  |  Quantité  |  Prix  |\")\n",
    "        print(\"---------------------------------------------------------------------\")\n",
    "        for i in range(max(len(self.achats), len(self.ventes))):\n",
    "            if i < len(self.achats):\n",
    "                print(f\"| {self.achats[i].type_ordre.ljust(7)} | {str(self.achats[i].quantite).ljust(10)} | {str(self.achats[i].prix).ljust(6)} |\", end=\"\")\n",
    "            else:\n",
    "                print(\" \"*29, end=\"\")\n",
    "            if i < len(self.ventes):\n",
    "                print(f\" {self.ventes[i].type_ordre.ljust(7)} | {str(self.ventes[i].quantite).ljust(10)} | {str(self.ventes[i].prix).ljust(6)} |\")\n",
    "            else:\n",
    "                print()\n",
    "\n",
    "def saisir_ordres():\n",
    "    while True:\n",
    "        try:\n",
    "            nombre_ordres = int(input(\"Combien d'ordres souhaitez-vous saisir (minimum 5) ? \"))\n",
    "            if nombre_ordres < 5:\n",
    "                print(\"Veuillez saisir au moins 5 ordres.\")\n",
    "            else:\n",
    "                break\n",
    "        except ValueError:\n",
    "            print(\"Veuillez saisir un nombre entier.\")\n",
    "\n",
    "    carnet = CarnetOrdres()\n",
    "    for i in range(nombre_ordres):\n",
    "        print(f\"\\nOrdre {i+1} :\")\n",
    "        \n",
    "        # Demander la quantité\n",
    "        while True:\n",
    "            try:\n",
    "                quantite = int(input(\"Entrez la quantité : \"))\n",
    "                if quantite <= 0:\n",
    "                    print(\"Veuillez saisir une quantité positive.\")\n",
    "                else:\n",
    "                    break\n",
    "            except ValueError:\n",
    "                print(\"Veuillez saisir un nombre entier pour la quantité.\")\n",
    "\n",
    "        # Demander le type d'ordre (achat/vente)\n",
    "        type_ordre = input(\"Entrez le type d'ordre (Achat/Vente) : \")\n",
    "\n",
    "        # Demander le prix\n",
    "        ordre_marche = input(\"Ordre au prix de marché ? (Oui/Non) : \").lower()\n",
    "        if ordre_marche == \"non\":\n",
    "            while True:\n",
    "                try:\n",
    "                    prix = float(input(\"Entrez le prix : \"))\n",
    "                    if type_ordre.lower() == \"vente\" and prix <= 0:\n",
    "                        print(\"Veuillez saisir un prix positif pour une vente.\")\n",
    "                    elif type_ordre.lower() == \"achat\" and prix < 0:\n",
    "                        print(\"Veuillez saisir un prix positif ou nul pour un achat.\")\n",
    "                    else:\n",
    "                        break\n",
    "                except ValueError:\n",
    "                    print(\"Veuillez saisir un nombre pour le prix.\")\n",
    "        else:\n",
    "            prix = None\n",
    "\n",
    "        # Créer l'ordre et l'ajouter au carnet\n",
    "        ordre = Ordre(type_ordre, quantite, prix)\n",
    "        carnet.ajouter_ordre(ordre)\n",
    "\n",
    "    # Exécuter les ordres au prix de marché\n",
    "    for ordre in carnet.achats:\n",
    "        if ordre.prix is None:\n",
    "            quantite_exec = carnet.execute_ordre_marche(ordre)\n",
    "            ordre.quantite -= quantite_exec\n",
    "    for ordre in carnet.ventes:\n",
    "        if ordre.prix is None:\n",
    "            quantite_exec = carnet.execute_ordre_marche(ordre)\n",
    "            ordre.quantite -= quantite_exec\n",
    "\n",
    "    # Afficher le carnet d'ordres\n",
    "    carnet.afficher_carnet()\n",
    "\n",
    "# Appeler la fonction pour saisir les ordres et afficher le carnet d'ordres\n",
    "saisir_ordres()\n"
   
   ]
